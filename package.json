{
  "name": "snout-os",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate --schema=prisma/schema.prisma && next build",
    "build:with-db": "prisma generate --schema=prisma/schema.prisma && prisma db push --schema=prisma/schema.prisma --skip-generate && next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:ui": "playwright test",
    "test:ui:visual": "playwright test tests/visual",
    "check:ui-constitution": "tsx scripts/check-ui-constitution.ts",
    "lighthouse:ci": "lhci autorun",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate --schema=prisma/schema.prisma",
    "proof:phaseA": "tsx scripts/proof-phaseA.ts",
    "audit:tier-badges": "tsx scripts/audit-tier-badges.ts",
    "backfill:tiers": "tsx scripts/backfill-sitter-tiers.ts",
    "verify:backfill": "tsx scripts/verify-tier-backfill.ts",
    "check:tiers": "tsx scripts/check-tier-visibility.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@prisma/client": "^5.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.0.0",
    "bcryptjs": "^3.0.3",
    "bullmq": "^4.0.0",
    "googleapis": "^128.0.0",
    "ioredis": "^5.0.0",
    "next": "15.5.6",
    "next-auth": "^5.0.0-beta.30",
    "postcss": "^8.0.0",
    "prisma": "^5.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "stripe": "^14.0.0",
    "tailwindcss": "^3.0.0",
    "typescript": "^5.0.0",
    "zod": "^4.2.1",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.51.1",
    "@types/node": "^20.0.0",
    "@vitest/ui": "^4.0.16",
    "eslint": "^8.0.0",
    "eslint-config-next": "15.5.6",
    "tsx": "^4.20.6",
    "vitest": "^4.0.16"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "tsx prisma/seed.ts"
  }
}
