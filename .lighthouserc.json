{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "startServerCommand": "npm run start",
      "startServerReadyPattern": "ready on",
      "startServerReadyTimeout": 60000,
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/bookings",
        "http://localhost:3000/calendar"
      ]
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.7}],
        "categories:accessibility": ["error", {"minScore": 0.85}],
        "categories:best-practices": ["warn", {"minScore": 0.8}],
        "categories:seo": ["off"],
        "largest-contentful-paint": ["warn", {"maxNumericValue": 3000}],
        "interactive": ["warn", {"maxNumericValue": 3000}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.15}],
        "total-byte-weight": ["warn", {"maxNumericValue": 6000000}],
        "service-worker": ["off"],
        "installable-manifest": ["off"],
        "splash-screen": ["off"],
        "themed-omnibox": ["off"],
        "maskable-icon": ["off"],
        "errors-in-console": ["warn", {"minScore": 0}],
        "csp-xss": ["warn", {"minScore": 0}],
        "unused-css-rules": ["warn", {"maxLength": 5}],
        "unused-javascript": ["warn", {"maxLength": 5}],
        "render-blocking-resources": ["warn", {"maxLength": 5}],
        "color-contrast": ["warn", {"minScore": 0}],
        "non-composited-animations": ["warn", {"minScore": 0}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
